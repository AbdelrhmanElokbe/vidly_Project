@using Vidly.Models
@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<table id ="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <td><b>Movie</b></td>
            <td><b>Genre</b></td>
        </tr>

    </thead>
    <tbody></tbody>
   
</table>

@section scripts
{
    <script>
        $(document).ready(function () {

            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/Movie",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "genreType.name"
                    }
                ]
            });

        });
    </script>
}