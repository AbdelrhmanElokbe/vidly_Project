@model Vidly.viewModels.MovieFormViewModel
@{
    ViewBag.Title = "New";

    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.Name == "New")
{
    <h2>New Movie</h2>
}
else
{
    <h2>Edit Movie</h2>
}


@using (@Html.BeginForm("Save", "Movie"))
{

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ReleseDate)
        @Html.TextBoxFor(m => m.ReleseDate, "{0:d mmm yyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ReleseDate)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.GenreTypeId)
        @Html.DropDownListFor(m => m.GenreTypeId, new SelectList(Model.GenreType, "Id", "Name"), "..", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.GenreTypeId)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NumberInStock)
        @Html.TextBoxFor(m => m.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NumberInStock)
    </div>
    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}




